{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"baseUrl": "src",
		"paths": {
		  "@root/*": ["*"],
		  "@lib/*": ["lib/*"],
		  "@data/*": ["assets/data/*"]
		}
	},
	"include": [
		"src/**/*"
	]
}
